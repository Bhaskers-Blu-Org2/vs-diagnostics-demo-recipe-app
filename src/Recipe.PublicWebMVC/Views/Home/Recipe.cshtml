@{
	ViewData["Title"] = "Recipe";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inline" style="padding: 5%;">
	<form asp-controller="Home" asp-action="SearchResults" class="form-inline">
		<input class="form-control mr-sm-2" type="search" name="searchString" placeholder="Search Recipes" aria-label="Search" style="width: 90%">
		<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
	</form>
</div>

<div>
	<a asp-action="Index">Back to Home</a>
</div>

<div class="recipe">
	<div class="row">
		<div class="recipe-header">
			<h1 class="recipe-header__title">@Model.Title</h1>
			<div class="recipe-header__byline">By @Model.CreditText (@Model.License)</div>
			<img class="recipe-header__image" src="@Model.Image" />
			<div class="recipe-header__servings">Serves @Model.Servings</div>
			<div class="recipe-header__time">Ready In @Model.ReadyInMinutes minutes</div>
		</div>
	</div>
	<div class="row">
		<div class="recipe-ingredients col-md-6">
			<h2>Ingredients</h2>
			<ul class="recipe-ingredients__list">
				@foreach (var item in Model.ExtendedIngredients)
				{
					<li class="recipe-ingredients__list-item">@item.OriginalString</li>
				}
			</ul>
		</div>
		<div class="recipe-steps col-md-6">
			<h2>Steps</h2>
			<ol class="recipe-steps__list">
				@foreach (var item in Model.AnalyzedInstructions[0].Steps)
				{
					<li class="recipe-steps__list-item">@item.Step</li>
				}
			</ol>
		</div>
	</div>
</div>

