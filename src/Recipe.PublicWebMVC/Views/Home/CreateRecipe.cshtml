@model PublicWebMVC.Models.Recipe

@{
	ViewData["Title"] = "CreateRecipe";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
	<div class="col-md-4">
		<br /><br /><br /><h2>Add New Recipe</h2>
		<hr />
		<form asp-action="CreateRecipe">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CreditText" class="control-label">Author Name</label>
				<input asp-for="CreditText" class="form-control" />
				<span asp-validation-for="CreditText" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Servings" class="control-label">Servings</label>
				<input asp-for="Servings" class="form-control" />
				<span asp-validation-for="Servings" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ReadyInMinutes" class="control-label">Prep Time (minutes)</label>
				<input asp-for="ReadyInMinutes" class="form-control" />
				<span asp-validation-for="ReadyInMinutes" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Image" class="control-label">Upload Image</label>
				<input asp-for="Image" class="form-control-file" type="file" name="pic" accept="image/*"><br />
			</div>
			<div>
				<table id="ingredientsTable" class="table table-sm">
					<thead>
						<tr>
							<th scope="col">Ingredients</th>
							<th scope="col"></th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>

						<tr id="templateRow">
							<td><input class="form-control" asp-for="ExtendedIngredients" /></td>
							<td><button type="button" class="btn btn-success" onclick="addIngredientRow(this)">+</button></td>
							<td><button type="button" class="btn btn-danger" onclick="deleteIngredientRow(this)">-</button></td>
						</tr>
					</tbody>
				</table>
				<span asp-validation-for="ExtendedIngredients" class="text-danger"></span>
			</div>
			<div>
				<table id="instructionsTable" class="table table-sm">
					<thead>
						<tr>
							<th scope="col">Step #</th>
							<th scope="col">Instructions</th>
							<th scope="col"></th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						<tr id="templateRow">
							<td>1</td>
							<td><input class="form-control" asp-for="AnalyzedInstructions[0].Steps" /></td>
							<td><button type="button" class="btn btn-success" onclick="addInstructionRow(this)">+</button></td>
							<td><button type="button" class="btn btn-danger" onclick="deleteInstructionRow(this)">-</button></td>
						</tr>
					</tbody>
				</table>
				<span asp-validation-for="AnalyzedInstructions[0].Steps" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="AnalyzedInstructions[0].Steps" class="control-label">Instructions</label>
				<input asp-for="AnalyzedInstructions[0].Steps" class="form-control" />
				<span asp-validation-for="AnalyzedInstructions[0].Steps" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Add Recipe" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to Home</a>
</div>


@section Scripts
	{
	<environment include="Development">
		<script src="~/js/createRecipe.js" asp-append-version="true"></script>
	</environment>
}